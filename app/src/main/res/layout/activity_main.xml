<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.demi.einzelbeispiel_taschenrechner.MainActivity">

    <TextView
        android:id="@+id/ErgebnissText"
        android:layout_width="376dp"
        android:layout_height="38dp"
        android:layout_marginEnd="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginStart="1dp"
        android:background="#fce89c"
        android:text="0"
        android:textAlignment="center"
        android:textColor="@android:color/darker_gray"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.801"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1" />

    <TextView
        android:id="@+id/DividendLable"
        android:layout_width="82dp"
        android:layout_height="27dp"
        android:text="Dividend:"
        android:textColor="@android:color/holo_green_light"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="114dp" />

    <TextView
        android:id="@+id/DivisorLable"
        android:layout_width="81dp"
        android:layout_height="31dp"
        android:text="Divisor:"
        android:textColor="@android:color/holo_green_light"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteY="187dp"
        app:layout_constraintLeft_toLeftOf="@+id/DividendLable"
        tools:layout_editor_absoluteX="17dp"
        android:layout_marginLeft="1dp" />

    <TextView
        android:id="@+id/ErgebnisLable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ergebnis:"
        android:textColor="@android:color/holo_orange_dark"
        android:textSize="18sp"
        android:textStyle="italic"
        tools:layout_editor_absoluteY="340dp"
        app:layout_constraintLeft_toLeftOf="@+id/DivisorLable"
        android:layout_marginLeft="-1dp" />

    <EditText
        android:id="@+id/Divisor"
        android:layout_width="213dp"
        android:layout_height="40dp"
        android:layout_marginStart="79dp"
        android:ems="10"
        android:hint="Enter Divisor"
        android:inputType="number"
        tools:layout_editor_absoluteY="178dp"
        tools:layout_editor_absoluteX="129dp" />

    <EditText
        android:id="@+id/Dividend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter Dividend"
        android:inputType="number"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="129dp"
        app:layout_constraintBottom_toBottomOf="@+id/DividendLable"
        app:layout_constraintTop_toTopOf="@+id/DividendLable" />

    <Button
        android:id="@+id/button"
        android:layout_width="194dp"
        android:layout_height="38dp"
        android:background="@color/dreckigesGrÃ¼n"
        android:text="Berechnen"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        android:textStyle="italic"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="266dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginEnd="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginStart="1dp"
        android:text="Divisionsrechner"
        android:textAlignment="center"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.055"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1" />

</android.support.constraint.ConstraintLayout>
